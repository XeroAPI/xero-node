{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "install",
			"type": "shell",
			"command": "npm",
			"args": ["install"]
		},
		{
			"label": "update",
			"type": "shell",
			"command": "npm",
			"args": ["update"]
		},
		{
			"label": "build",
			"type": "shell",
			"command": "npm",
			"args": ["run", "build"]
		},
		{
			"label": "build-watch",
			"type": "shell",
			"command": "npm",
			"args": ["run", "build-watch"],
			"problemMatcher": "$tsc-watch"
		},
		{
			"label": "test",
			"type": "shell",
			"command": "npm",
			"args": ["run", "test"]
		}
	]
}
